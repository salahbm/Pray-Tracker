generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id          String    @id @default(cuid())
  clerkId     String    @unique
  email       String    @unique
  username    String    @unique
  firstName   String?
  lastName    String?
  photo       String?
  prays       Prays[]


  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}



model Prays {
  id      String   @id @default(cuid())
  userId  String
  user    User     @relation(fields: [userId], references: [id])
  pray    Pray[]
}

model Pray {
  id       String   @id @default(cuid())
  date     DateTime
  fajr     Int      @default(0) // Prayer Points
  dhuhr    Int      @default(0)
  asr      Int      @default(0)
  maghrib  Int      @default(0)
  isha     Int      @default(0)
  tahajjud Int      @default(0)
  praysId  String
  prays    Prays    @relation(fields: [praysId], references: [id])
}

