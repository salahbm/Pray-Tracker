{
  "compilerOptions": {
    "lib": ["esnext", "dom", "dom.iterable"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "paths": {
      "@prayer/shared": ["./packages/shared/src"],
      "@/*": ["./src/*"]
    }
  }
}
