{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "components/*": ["src/components/*"],
      "hooks/*": ["src/hooks/*"],
      "screens/*": ["src/screens/*"],
      "utils/*": ["src/utils/*"],
      "api/*": ["src/api/*"],
      "types/*": ["src/types/*"],
      "assets/*": ["assets/*"],
      "constants/*": ["src/constants/*"],
      "navigation/*": ["src/navigation/*"],
      "theme/*": ["src/theme/*"],
      "store/*": ["src/store/*"],
      "providers/*": ["src/providers/*"],
      "locales/*": ["locales/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "**/*.d.ts"
  ]
}
