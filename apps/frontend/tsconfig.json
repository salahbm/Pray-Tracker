{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@prayer/shared": ["../../packages/shared/src"],
      "@/*": ["./*"]
    },
    "module": "esnext"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "**/*.d.ts",
    "babel.config.js",
    "metro.config.js",
    "nativewind-env.d.ts"
  ]
}
